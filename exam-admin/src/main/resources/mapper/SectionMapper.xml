<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sias.admin.mapper.SectionMapper">

    <resultMap id="BaseResultMap" type="com.sias.admin.domain.Section">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="subjectId" column="subject_id" jdbcType="INTEGER"/>
            <result property="remark" column="remark" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,subject_id,
        remark
    </sql>
    <select id="selectBySubjectId" resultType="com.sias.admin.domain.Section">
        select <include refid="Base_Column_List"/> from section where subject_id = #{id}
    </select>
</mapper>
