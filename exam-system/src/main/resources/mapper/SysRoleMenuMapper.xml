<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sias.system.mapper.SysRoleMenuMapper">

    <resultMap id="BaseResultMap" type="com.sias.commons.model.SysRoleMenu">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="roleId" column="role_id" jdbcType="BIGINT"/>
            <result property="menuId" column="menu_id" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,role_id,menu_id
    </sql>
    <update id="removeByRoleId">
        delete from sys_role_menu where role_id = #{id}
    </update>
<insert id="insertSelective">
    insert into sys_role_menu
    <trim prefix="(" suffix=")" suffixOverrides=",">
        <if test="id != null">
            id,
        </if>
        <if test="roleId != null">
            role_id,
        </if>
        <if test="menuId != null">
            menu_id,
        </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
        <if test="id != null">
            #{id},
        </if>
        <if test="roleId != null">
            #{roleId},
        </if>
        <if test="menuId != null">
            #{menuId},
        </if>
    </trim>
</insert>
    <select id="list" resultType="com.sias.commons.model.SysRoleMenu">
        select <include refid="Base_Column_List"/> from sys_role_menu where role_id = #{roleId}
    </select>
</mapper>
